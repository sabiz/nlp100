    "def n_gram(text, n):\n",
    "    result = []\n",
    "    for i in range(0,len(text)-(n-1)):\n",
    "        result.append(text[i:i+n])\n",
    "    return result\n",
    "        \n",
    "text = \"I am an NLPer\"\n",
    "print(n_gram(text, 2))\n",
    "print(n_gram(text.split(\" \"), 2))"
   ]
